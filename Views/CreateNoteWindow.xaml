<Window x:Class="SeverstalTestTask.Views.CreateNoteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SeverstalTestTask.Views"
        mc:Ignorable="d"
        Title="Новая записка" Height="130" Width="230" Topmost="True" ShowInTaskbar="False" ResizeMode="NoResize">
    <Grid>
        <Label Content="Название" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="NameText" HorizontalAlignment="Left" Margin="80,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Height="26" VerticalContentAlignment="Center"/>
        <Button x:Name="CreateNewNoteButton" Click="CreateButtonNote" Content="Создать" HorizontalAlignment="Center" Margin="0,57,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
